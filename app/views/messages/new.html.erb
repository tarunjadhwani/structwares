<h1 class="text-center">Fill in for furter Queries</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@message) do |f| %>
    <%= render 'shared/error_messages', object: f.object %> 
   
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :contact_no %>
      <%= f.text_field :contact_no %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :subject %>
      <%= f.text_field :subject %>

      <%= f.label :body %>
      <%= f.text_area :body %>

      <%= f.submit "Send", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>